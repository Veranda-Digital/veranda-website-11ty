{
    "name": "veranda-website-11ty",
    "version": "1.0.0",
    "description": "A starter template to build websites with Ghost & Eleventy TESTTESTTEST",
    "main": "index.js",
    "url": "localhost:8080",
    "scripts": {
        "watch:sass": "sass --watch src/_includes/style:_site/style --style compressed",
        "build:sass": "sass src/_includes/style:_site/style --style compressed",
        "build:tailwind": "npx tailwindcss -i ./src/_includes/style/tailwind.css -o ./_site/style/tailwind.css --minify --watch",
        "watch:eleventy": "npx @11ty/eleventy --serve",
        "build:eleventy": "npx @11ty/eleventy",
        "start": "npm-run-all build:sass  --parallel watch:* build:tailwind",
        "build": "npm-run-all build:*"
    },
    "keywords": [],
    "author": "Nic Durish",
    "license": "ISC",
    "devDependencies": {
        "@11ty/eleventy": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "tailwindcss": "^3.1.8"
    },
    "dependencies": {
        "sass": "^1.55.0"
    }
}
